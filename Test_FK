ALTER TABLE professor 
ADD FOREIGN KEY(emp_num)REFERENCES employee(emp_num) ON DELETE CASCADE ON UPDATE CASCADE,
ADD FOREIGN KEY(dept_code)REFERENCES department(dept_code) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE school 
ADD FOREIGN KEY(emp_num) REFERENCES employee(emp_num) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE department 
ADD	FOREIGN KEY (school_code) REFERENCES school (school_code) ON DELETE CASCADE ON UPDATE CASCADE,
ADD FOREIGN KEY(emp_num)REFERENCES employee(emp_num) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE class  
ADD FOREIGN KEY(crs_code) REFERENCES course(crs_Code) ON DELETE CASCADE ON UPDATE CASCADE,
ADD FOREIGN KEY(emp_num)REFERENCES employee(emp_num) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE enroll
ADD FOREIGN KEY(class_code) REFERENCES class(class_code) ON DELETE CASCADE ON UPDATE CASCADE, 
ADD FOREIGN KEY(stu_num)REFERENCES student(stu_num) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE student 
ADD FOREIGN KEY(dept_code)REFERENCES department(dept_code) ON DELETE CASCADE ON UPDATE CASCADE,
ADD FOREIGN KEY(emp_num)REFERENCES employee(emp_num) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE  room
ADD FOREIGN KEY(building_code) REFERENCES building(building_code) ON DELETE CASCADE ON UPDATE CASCADE; 
